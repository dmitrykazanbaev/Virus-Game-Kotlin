<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/mainframe"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:keepScreenOn="true">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/control_buttons">
        <ImageButton
                android:contentDescription="@string/virus_button_description"
                android:background="@android:color/transparent"
                android:src="@mipmap/virus_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onTouch"
                android:layout_alignParentStart="true"
                android:id="@+id/virus_button"/>
        <ImageButton
                android:contentDescription="@string/statistics_button_description"
                android:background="@android:color/transparent"
                android:src="@mipmap/statistic_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:id="@+id/statistics_button"/>
    </RelativeLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/characteristic_window"
            android:background="@color/low_transparent"
            android:visibility="visible">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="16dp" android:id="@+id/whitespace_indent">
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characteristic_buttons"
                android:weightSum="8.85"
        >
            <ImageButton
                    android:background="@android:color/transparent"
                    android:src="@mipmap/button_non"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:id="@+id/abilities_button"
                    android:adjustViewBounds="true"
                    android:translationX="32dp"/>
            <ImageButton
                    android:background="@android:color/transparent"
                    android:src="@mipmap/button_non"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:id="@+id/propagation_button"
                    android:adjustViewBounds="true"
                    android:translationX="16dp"/>
            <ImageButton
                    android:background="@android:color/transparent"
                    android:src="@mipmap/button_non"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:id="@+id/resistance_button"
                    android:adjustViewBounds="true"/>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:src="@mipmap/button_non"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:id="@+id/devices_button"
                    android:adjustViewBounds="true"
                    android:translationX="-16dp"/>

            <ImageButton
                    android:background="@android:color/transparent"
                    android:src="@mipmap/button_closed"
                    android:scaleType="centerInside"
                    android:layout_width="0dp"
                    android:layout_weight="0.85"
                    android:layout_height="wrap_content"
                    android:onClick="onTouch"
                    android:id="@+id/close_characteristics_button"
                    android:adjustViewBounds="true"
                    android:translationX="-32dp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/propagation_progress_bar"
                    android:layout_weight="1"
                    android:progress="20"
                    android:progressDrawable="@drawable/characteristics_progress_bar_style"/>
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/efficiency_progress_bar"
                    android:progress="0"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/characteristics_progress_bar_style"/>
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resistance_progress_bar"
                    android:layout_weight="1"
                    android:progress="50"
                    android:progressDrawable="@drawable/characteristics_progress_bar_style"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>