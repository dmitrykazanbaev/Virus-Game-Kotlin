<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CharacteristicsProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">100dp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:progressDrawable">@drawable/characteristics_progress_bar_style</item>
        <item name="android:layout_marginLeft">@dimen/indentTextAndProgressBarLeft</item>
    </style>

    <style name="CharacteristicsProgressBarTextViewStyle" parent="@android:style/TextAppearance.Holo.Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/indentTextAndProgressBarLeft</item>
        <item name="android:textSize">@dimen/text_characteristics_progress_bar</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
