<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CharacteristicsProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">100dp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:progressDrawable">@drawable/characteristics_progress_bar_style</item>
        <item name="android:layout_marginLeft">@dimen/indent_text_and_progress_bar_left</item>
    </style>

    <style name="CharacteristicsProgressBarTextViewStyle" parent="@android:style/TextAppearance.Holo.Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/indent_text_and_progress_bar_left</item>
        <item name="android:textSize">@dimen/text_characteristics_progress_bar</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonCharacteristicTextViewStyle" parent="@android:style/TextAppearance.Holo.Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_control_button_characteristic</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="backgroundColor">@color/control_button_color</item>
        <item name="indentLeftTop">true</item>
        <item name="indentRightBottom">true</item>
        <item name="customFont">DINPro/DINPro.otf</item>
    </style>

    <style name="BuyWindowTextViewStyle" parent="@android:style/TextAppearance.Holo.Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="customFont">DINPro/DINPro.otf</item>
    </style>

    <style name="ControlButtonCharacteristicTextViewStyle" parent="@android:style/TextAppearance.Holo.Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_control_button_characteristic</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="customFont">DINPro/DINPro.otf</item>
    </style>

</resources>
